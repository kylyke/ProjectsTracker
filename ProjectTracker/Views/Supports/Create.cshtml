@model ProjectTracker.Database.Concrete.Support

@{
    ViewData["Title"] = "Create";
}

<h1>Destek</h1>

<h4>Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label><a scope="col">Firma Adı</a></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Projects"></select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserId" class="control-label">İlgili</label>
                <select asp-for="User.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Demander" class="control-label">Sorun</label>
                <input asp-for="Demander" class="form-control" />
                <span asp-validation-for="Demander" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Execution" class="control-label">Yapılan İşlem</label>
                <input asp-for="Execution" class="form-control" />
                <span asp-validation-for="Execution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-outline-primary" />
                <a class="btn btn-outline-secondary" asp-action="Index">Geri Dön</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
