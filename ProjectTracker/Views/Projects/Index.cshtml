@model IEnumerable<ProjectTracker.Database.Concrete.Project>

@{
    ViewData["Title"] = "Index";
}
@section Header{

}




<p><h4>Firmalar</h4></p>
<a class="btn btn-primary" asp-action="Create">Yeni Firma Ekle</a>
<p></p>
<table id="mytable" class="table table-bordered table-striped" style="display: none;">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Firma Adı</th>
            <th scope="col">Başlangıç Tarihi</th>
            <th scope="col">Güncellenme Tarihi</th>
            <th scope="col">Bitiş Tarihi</th>
            <th scope="col">Firma İlgilisi</th>
            <th scope="col">İlgili</th>
            <th scope="col">Bakım Anlaşması</th>
            <th scope="col">Güncelleme Anlaşması</th>

            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyAbout)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @if (item.MaintenanceAgreement == true)
                    {<span class="dot"></span>
                    }
                    else
                    {
                        <span class="dot2"></span>
                    }

                </td>
                <td>
                    @if (item.UpdateAgreement == true)
                    {<span class="dot"></span>
                    }
                    else
                    {
                        <span class="dot2"></span>
                    }

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable();
            $('#mytable').show();

        });
    </script>
}

<style>
    .dot {
        margin-left: 43%;
        height: 25px;
        width: 25px;
        background-color: greenyellow;
        border-radius: 50%;
        display: inline-block;
    }

    .dot2 {
        margin-left: 43%;
        height: 25px;
        width: 25px;
        background-color: red;
        border-radius: 50%;
        display: inline-block;
    }
</style>