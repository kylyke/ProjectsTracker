@model ProjectTracker.Database.Concrete.User

@{
    ViewData["Title"] = "Delete";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kullanıcı</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <a scope="col">Adı</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <a scope="col">Soyadı</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            <a scope="col">Kullanıcı Adı</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            <a scope="col">Şifre</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Kullanıcıyı Sil" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Geri Dön</a>
    </form>
</div>
